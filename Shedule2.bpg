wpm.exe: Wpm2\wpm.dpr
  $(DCC)

dbadmin.exe: DBAdmin\dbadmin.dpr
  $(DCC)

importer.exe: Importer2\importer.dpr
  $(DCC)

xmtable.exe: XMTable\xmtable.dpr
  $(DCC)


